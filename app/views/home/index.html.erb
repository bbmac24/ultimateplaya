<div ng-repeat="team in vm.teams" ng-show="vm.selectedTeamId == team.id"> 
  <img ng-hide="vm.players.length == 5" style="width:169px;" ng-src="{{ team.image_url }} ">
</div> 

<div ng-repeat="player in vm.players"> 
  {{ player.player_name }} <img style="width:150px;"ng-src="{{ player.players_image }}"> + {{ player.player_position }} <img style="width:200px;"ng-src="{{ player.team.image_url }}">
</div> 


